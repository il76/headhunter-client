<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовые шрифты. По возможности использовать наследование от них -->
    <style name="Font32Bold">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:fontWeight">@dimen/font_weight_700</item>
        <item name="android:textSize">@dimen/font_size_32</item>
        <item name="android:textColor">@color/black_day_white_night</item>
    </style>
    <style name="Font22Medium">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@dimen/font_weight_500</item>
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:textColor">@color/black_day_white_night</item>
    </style>
    <style name="Font16Medium">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@dimen/font_weight_500</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/black_day_white_night</item>
    </style>
    <style name="Font16Regular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">@dimen/font_weight_400</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/black_day_white_night</item>
    </style>
    <style name="Font12Regular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">@dimen/font_weight_400</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textColor">@color/black_day_white_night</item>
    </style>
    <!-- Конец базовых шрифтов -->

    <style name="TeamTextStyle" parent="Font16Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomNavigationStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@drawable/background_bottom_nav</item>
    </style>

    <style name="SearchEditText" parent="Font16Regular">
        <item name="android:textColor">@color/black_day_white_night</item>
        <item name="android:textColorHint">@color/search_edit_hint</item>
        <item name="backgroundColor">@color/search_edit_background</item>
    </style>
</resources>
