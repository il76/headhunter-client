<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="9dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/industry_list_item_title"
        style="@style/Font16Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:fontFamily="@font/ys_display_regular"
        tools:text="Авиационная, вертолетная и аэрокосмическая промышленность" />

    <ImageView
        android:id="@+id/industry_item_selection_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp"
        android:src="@drawable/industry_check_box_off" />
</LinearLayout>
